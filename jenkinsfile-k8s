pipeline {
    agent {
        kubernetes {
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: docker
                image: docker:20.10.7
                command:
                - cat
                tty: true
                volumeMounts:
                - name: docker-socket
                  mountPath: /var/run/docker.sock
              volumes:
              - name: docker-socket
                hostPath:
                  path: /var/run/docker.sock
            """
        }
    }
    environment {
        HARBOR_URL = 'harborlab.citigo.net'
        HARBOR_PROJECT = 'jenkins'
        IMAGE_NAME = 'nginx-app-k8s'
        DOCKER_CREDENTIALS_ID = 'harbor_id'
    }
    stages {
        stage('version') {
            steps {
                sh 'docker --version'
                sh 'sleep 50'
            }
        }
        stage('Build Docker Image') {
            steps {
                container('docker') {
                    script {
                        dockerImage = docker.build("${HARBOR_URL}/${HARBOR_PROJECT}/${IMAGE_NAME}:${BUILD_NUMBER}")
                    }
                }
            }
        }
        stage('Push to Harbor') {
            steps {
                container('docker') {
                        script {
                            docker.withRegistry("https://${HARBOR_URL}", "${DOCKER_CREDENTIALS_ID}") {
                                dockerImage.push()
                        }
                    }
                }
            }
        }
    }
}
